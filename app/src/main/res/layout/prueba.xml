<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Nombre del Publicador y Fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/publisherImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/publisherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Publicador"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/publicationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Publicación"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Imagen del Producto -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <!-- Nombre del Producto -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Nombre del Producto"
        android:textStyle="bold" />

    <!-- Descripción del Producto -->
    <TextView
        android:id="@+id/productDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="Descripción del Producto" />

    <!-- Botones "Me Interesa" y "Contactar" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnMeInteresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Me Interesa" />

        <Button
            android:id="@+id/btnContactar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#25D366"
            android:drawableLeft="@drawable/ic_whatsapp"
            android:text="Contactar"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>