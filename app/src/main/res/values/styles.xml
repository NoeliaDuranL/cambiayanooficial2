<!-- Tema claro en styles.xml -->
<resources>

    <style name="Theme.Cambiayanooficial2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorPrimaryVariant">@color/my_light_primary_variant</item>
        <item name="colorOnPrimary">@color/my_light_on_primary</item>
        <item name="colorOnBackground">@color/my_light_on_background</item>
    </style>

    <style name="Theme.Cambiayanooficial2.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorPrimaryVariant">@color/my_light_primary_variant</item>
        <item name="colorOnPrimary">@color/my_light_on_primary</item>
        <item name="colorOnBackground">@color/my_light_on_background</item>

        <!-- Color de texto para el modo claro -->
        <!--        <item name="android:textColorPrimary">@color/text_color_pink</item>-->
    </style>

    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>  <!-- Esto asegura que sea completamente circular -->
    </style>
</resources>